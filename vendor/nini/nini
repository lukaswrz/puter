#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

progname=$0

warn() {
    local line
    for line in "$@"; do
        echo "$progname: $line" 1>&2
    done
}

error() {
    warn "$@"

    exit 1
}

args=$(
    getopt \
        --options o:t:v \
        --longoptions on:,to:,verbose \
        --name "$progname" \
        -- "$@"
)

eval set -- "$args"

if [[ -v NINI_FLAKE && -n $NINI_FLAKE ]]; then
    flake=$NINI_FLAKE
fi
flags=(
    --refresh
    --sudo
    --no-write-lock-file
)
verbose=false
while true; do
    case $1 in
    -o | --on)
        flags+=(--build-host "$2")
        shift 2
        ;;
    -t | --to)
        host=$2
        flags+=(--target-host "$host")
        shift 2
        ;;
    -v | --verbose)
        flags+=(--verbose)
        verbose=true
        shift
        ;;
    --)
        shift
        break
        ;;
    esac
done

if (($# == 0)); then
    error 'a subcommand is required'
fi

sub=$1

shift

if (($# > 0)); then
    flake=$1
fi

if [[ ! -v flake ]]; then
    error 'no flake has been specified'
fi

flags+=(--flake "$flake")

shift

run() {
    cmd=(nixos-rebuild "${flags[@]}" "$@")

    if "$verbose"; then
        warn "running ${cmd[*]}"
    fi

    "${cmd[@]}"
}

case $sub in
s | switch)
    if (($# > 0)); then
        error 'too many arguments'
    fi

    run switch
    ;;
b | boot)
    if (($# > 0)); then
        error 'too many arguments'
    fi

    run boot
    ;;
t | test)
    if (($# > 0)); then
        error 'too many arguments'
    fi

    run test
    ;;
bld | build)
    if (($# > 0)); then
        error 'too many arguments'
    fi

    run build
    ;;
dbld | dry-build)
    if (($# > 0)); then
        error 'too many arguments'
    fi

    run dry-build
    ;;
da | dry-activate)
    if (($# > 0)); then
        error 'too many arguments'
    fi

    run dry-activate
    ;;
vm | build-vm)
    if (($# > 0)); then
        error 'too many arguments'
    fi

    run build-vm
    ;;
r | repl)
    if (($# > 0)); then
        error 'too many arguments'
    fi

    run repl
    ;;
i | img | build-image)
    if (($# < 1)); then
        error 'image variant is required'
    fi

    if (($# > 1)); then
        error 'too many arguments'
    fi

    variant=$1

    flags+=("$variant")

    run build-image
    ;;
*)
    error 'invalid subcommand'
    ;;
esac
